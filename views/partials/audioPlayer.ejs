    .audio_buttons {
        position: absolute;
        width: 20%;
        height: 55px;
        padding-top: 7px;
    }
    
    
    /* The title area. */
    .title_area {
        position: absolute;
        left: 17%;
        width: 70%;
        height: 55px;
